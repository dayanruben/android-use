#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

echo "Running pre-commit checks..."

# Run format
echo "Formatting code..."
bun run format || exit 1

# Run lint
echo "Running linter..."
bun run lint || exit 1

# Run typecheck
echo "Running typecheck..."
bun run typecheck || exit 1

# Run tests
echo "Running tests..."
bun test || exit 1

echo "All checks passed!"
